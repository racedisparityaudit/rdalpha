<div class="breadcrumbs">
  <ol>
    <% @taxonomy_level.breadcrumbs.each do |crumb| %>
      <li> <a href="<%=crumb.link%>"><%=crumb.breadcrumb_name%></a></li>
    <% end %>

    <% if @taxonomy_level.name == "homepage" %>
      <li>
        <a href="#"> Entire public sector </a>
      </li>
    <% end %>
  </ol>
</div>

<div class = "grid-row">


  <div class="column-two-thirds">
    <h1 class = heading-xlarge>
      <%= @topic.display_name %>
    </h1>

    <% @topic.topic_overview.each do |p| %>
      <p>
        <%= p %>
      </p>
    <% end %>

  </div>
</div>
<div class='grid-row'>
  <div class='column-two-thirds'>
      <div class="accordions-container container">
        <% @topic.taxonomy_levels.each do |sub_topic| %>
          <div class="accordion">
            <div class="accordion__header">
              <h2>
                <button>
                  <%= sub_topic.display_name %>
                </button>
              </h2>
              <span class="plus-minus-icon"></span>
            </div>

            <div class='accordion__body'>
              <% sub_topic.measures.each do |f| %>
                <ul class = "list">
                  <div class="row-description">
                    <a href="/<%= f.name %>"><li> <%= f.description %></li></a>
                  </div>
                </ul>
              <% end %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>

